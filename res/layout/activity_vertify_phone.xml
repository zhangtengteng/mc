<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_gray"
    android:orientation="vertical" >

    <include layout="@layout/top_title" />
 

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical" >

       <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/little_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/people" />

            <TextView
                android:id="@+id/vertify_phone_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/little_gray" />

        <LinearLayout
            android:id="@+id/ll_pwd"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.chehui.maiche.custom.EditTextWithDel
                android:id="@+id/et_code"
                android:layout_width="160dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="55dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/reg_user_code"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#4000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_send_code"
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/detail_modify_gray"
                android:text="@string/reg_user_send_code"
                android:textColor="@color/white" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/little_gray" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_myorder_next"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/corners_login_btn_bg"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>