<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_order_background" >

    <include
        android:id="@+id/top_btn"
        layout="@layout/myorder_topbtn_layout" />

    <com.chehui.maiche.custom.AutoListView
        android:id="@+id/myOrder_frag_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@color/little_gray"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:layout_below="@id/top_btn"
        android:fadingEdge="none"
        android:overScrollMode="never" />
      

</RelativeLayout>