<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_background_gray"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.chehui.maiche.login.LoginActivity" >

    <include
        android:id="@+id/include1"
        layout="@layout/top_title" />

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/corners_bg" >

        <View
            android:id="@+id/view_top"
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/LinearLayout1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_detail_state"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_order_detial_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/order_detail_state"
                android:textColor="@color/red"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_state"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_state"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view_state"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_detail_number"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_order_detial_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/order_detail_number"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/view_line" />

        <!-- 3 -->

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_detail_car_price"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_order_detial_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/order_detail_car_price"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_price"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/view_line" />

        <!-- 4 -->

        <LinearLayout
            android:id="@+id/ll_insurance_price"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_price"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_detail_insurance_price"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_order_detial_InsurancePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/order_detail_insurance_price"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_insurance_price"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/view_line" />

        <!-- 5 -->

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_insurance_price"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_detail_phone"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_order_detial_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/order_detail_phone"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_phone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/view_line" />

        <!-- 6 -->

        <LinearLayout
            android:id="@+id/ll_city"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_phone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_detail_city"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_order_detial_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/order_detail_city"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_city"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/view_line" />

        <!-- 7 -->

        <LinearLayout
            android:id="@+id/ll_introduction"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ll_city"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_detail_introduction"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_order_detial_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="这个车不错！"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- 顶部图片 -->

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view_top"
            android:background="@drawable/order_detail_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/iv_top_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/car"
                    android:scaleType="fitCenter" />
                <TextView
                    android:id="@+id/tv_top_title"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="@string/message_order_title"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_check"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corners_xunjia_btn_bg"
        android:text="@string/order_detail_xunjia"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>