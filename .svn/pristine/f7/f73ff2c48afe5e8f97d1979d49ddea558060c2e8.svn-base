<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_gray" >

    <include layout="@layout/top_title" />

    <LinearLayout
        android:id="@+id/llAccountManage"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/set_bg_down"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/message" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/message_on_off"
            android:singleLine="true"
            android:textColor="@color/black" />

        <com.chehui.maiche.custom.WiperSwitch
            android:id="@+id/wiperSwitchMessage"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSendMessage"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/llAccountManage"
        android:background="@drawable/set_bg_down"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sound" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/sound_on_of"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/black" />

        <com.chehui.maiche.custom.WiperSwitch
            android:id="@+id/wiperSwitchSound"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.7" />
    </LinearLayout>

</RelativeLayout>