<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/line_top"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/little_gray"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" >

            <ImageView
                android:id="@+id/img_carImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="8dp" />

            <ImageView
                android:id="@+id/img_heard"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/orderdetail_heard" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/txt_seriesName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="宝马5系宝马"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_telNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="180*****101"
                    android:textColor="@color/detail_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_isBaojia"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_margin="2dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="0"
                    android:background="@drawable/enquiry_qiang" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_carName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/corners_bg2"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:gravity="center"
                        android:text="35AAFST"
                        android:textColor="@color/detail_gray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/txt_carColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/corners_bg2"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="宝蓝"
                        android:textColor="@color/detail_gray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/txt_payMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corners_bg2"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="全款"
                        android:textColor="@color/detail_gray"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_beginDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="6dp"
                    android:text="2015/7/1"
                    android:gravity="right"
                    android:textColor="@color/detail_gray"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line_below"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:background="@color/little_gray" />

    <View
        android:id="@+id/line_last"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/little_gray"
        android:visibility="gone" />

</LinearLayout>