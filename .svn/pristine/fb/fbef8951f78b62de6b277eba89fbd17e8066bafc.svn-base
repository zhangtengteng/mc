	private void showCustomUI() {
		@SuppressWarnings("deprecation")
		int width = getWindowManager().getDefaultDisplay().getWidth();
		PoPShareWindowManager.getInstance().init(getApplicationContext(),
				width, LayoutParams.WRAP_CONTENT, R.layout.pop_share_wechat);
		PoPShareWindowManager.getInstance().showPopAllLocation(layout,
				Gravity.CENTER | Gravity.BOTTOM, 0, 0);
		PoPShareWindowManager.getInstance().OnClickWechat(
				new OnClickListener() {

					@Override
					public void onClick(View v) {
						// 调用直接分享
						mController.directShare(SetupAboutActivity.this,
								SHARE_MEDIA.WEIXIN, mShareListener);
						PoPShareWindowManager.getInstance().dismissPop();
					}
				});
		PoPShareWindowManager.getInstance().OnClickWechatCircle(
				new OnClickListener() {

					@Override
					public void onClick(View v) {
						// 调用直接分享
						mController.directShare(SetupAboutActivity.this,
								SHARE_MEDIA.WEIXIN_CIRCLE, mShareListener);
						PoPShareWindowManager.getInstance().dismissPop();
					}
				});
	}
